<?xml version="1.0" ?>
<robot name="ramp">
    
	<!-- Bloque azul en (10,0,0) -->
	<link name="block">
		<visual>
			<origin xyz="10 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="4 2 1.5"/> 
			</geometry>
			<material name="blue">
				<color rgba="0 0 1 1"/>
			</material>
		</visual>
	</link>

	<!-- Rampa de subida inclinada -->
	<link name="rampa_subida">
		<visual>
			<origin xyz="6.5 0 0.35" rpy="0 -0.228 0"/>  <!-- Se rota en Y (pitch) -->
			<geometry>
				<box size="3.1 2 0.1"/> 
			</geometry>
			<material name="blue">
				<color rgba="0 0 1 1"/>
			</material>
		</visual>
	</link>

	<!-- Rampa de subida inclinada -->
	<link name="rampa_bajada">
		<visual>
			<origin xyz="13.5 0 0.35" rpy="0 0.228 0"/>  <!-- Se rota en Y (pitch) -->
			<geometry>
				<box size="3.1 2 0.1"/> 
			</geometry>
			<material name="blue">
				<color rgba="0 0 1 1"/>
			</material>
		</visual>
	</link>

	<!-- Unión fija entre la rampa y el bloque -->
	<joint name="rampa_subida_joint" type="fixed">
		<parent link="block"/>
		<child link="rampa_subida"/>
	</joint>

	<!-- Unión fija entre la rampa y el bloque -->
	<joint name="rampa_bajada_joint" type="fixed">
		<parent link="block"/>
		<child link="rampa_bajada"/>
	</joint>

</robot>
