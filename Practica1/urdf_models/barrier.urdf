<?xml version="1.0" ?>
<robot name="barrier">
    
    <!-- Poste fijo (cilindro rojo) -->
    <link name="post">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="1.0"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="1.0"/>
            </geometry>
        </collision>
    </link>

    <!-- Brazo de la barrera móvil (Desplazado en Y -1) -->
    <link name="bar">
        <visual>
            <geometry>
                <box size="0.1 2 0.2"/>  
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 2 0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- Articulación de rotación en el extremo del brazo sobre el eje Z -->
    <joint name="rotation_joint" type="revolute">
        <parent link="post"/>
        <child link="bar"/>
        <origin xyz="0 -1 0"/>  <!-- Movemos la articulación al extremo del brazo -->
        <axis xyz="0 0 1"/>  <!-- Rotación en el eje Z -->
        <limit lower="-1.57" upper="1.57"/>
    </joint>

</robot>
